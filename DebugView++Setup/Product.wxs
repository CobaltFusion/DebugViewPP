    <File Id="OutputForwarderVSIX.vsix" Name="$(var.OutputForwarderVSIX.TargetName).vsix" Source="$(var.OutputForwarderVSIX.TargetDir)$(var.OutputForwarderVSIX.TargetName).vsix" Hidden="no" />
    </Component>
    </Fragment>
    -->

</Wix>
